<div id="add-purchase">
	
	<h1>Add a purchase record</h1>
	<form action="/purchase" method="POST">
		Shop: <input type="text" name="shop">
		Date: <input type="text" name="date">
		Product Name: <input type="text" name="item">
		Number Bought: <input type="text" name="quantity">
		Purchase Price: <input type="text" name="cost">
		<input type="submit">
	</form>
</div>

<div class="row">
<form class="form-horizontal" action="/purchase" method="POST">
  <fieldset>
    <legend>Purchases</legend>
    <div class="form-group">
      <label for="inputShop" class="col-lg-2 control-label">Shop</label>
      <div class="col-lg-10">
        <input class="form-control" name="shop" id="inputShop" placeholder="Shop" type="text">
      </div>
    </div>


    <div class="form-group">
      <label for="inputDate" class="col-lg-2 control-label">Date</label>
      <div class="col-lg-10">
        <input class="form-control" name="date" id="inputDate" placeholder="yyyy/dd/mm" type="text">
      </div>
    </div>

    <div class="form-group">
      <label for="inputProductName" class="col-lg-2 control-label">Product Name</label>
      <div class="col-lg-10">
        <input class="form-control" name="item" id="inputProductName" placeholder="Product Name" type="text">
      </div>
    </div>
    

    <div class="form-group">
      <label for="inputNumberBought" class="col-lg-2 control-label">Number Bought</label>
      <div class="col-lg-10">
        <input class="form-control" name="quantity" id="inputNumberBought" placeholder="Number Bought" type="text">
      </div>
    </div>

    <div class="form-group">
      <label for="inputPurchasePrice" class="col-lg-2 control-label">Purchase Price</label>
      <div class="col-lg-10">
        <input class="form-control" name="cost" id="inputPurchasePrice" placeholder="Purchase Price" type="text">
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>

</div>























<h2>Spaza Purchases</h2>
<table class="table">
	   <thead>
        
          <th>Shop</th>
          <th>Date</th>
          <th>Purchase Item</th>
          <th>Quantity Bought</th>
          <th>Purchase Price</th>
          
      
      </thead>
      <tbody>
      	    {{#each orders_table}}
			<tr>
			    <td>{{shop}}</td>
			    <td>{{date}}</td>
			    <td>{{item}}</td>
			    <td>{{quantity}}</td>
			    <td>{{cost}}</td>
			</tr>
		    {{/each}}
      </tbody>

</table>







