
<div id="add-products">
	
	<h1>Add a product</h1>
	<form action="/product" method="POST">
		Description: <input type="text" name="description">	
		<input type="submit">
	</form>
</div>



<h2>Product list</h2>


<table class="table">
	   <thead>
        
          <th>product_id</th>
          <th>product_name</th>
          <th>category_id</th>
          
      
      </thead>
      <tbody>
      	     {{#each products}}
			<tr>
			    <td>{{product_id}}</td>
			    <td>{{product_name}}</td>
			    <td>{{category_id}}</td>
			</tr>
		    {{/each}}
      </tbody>

</table>

	